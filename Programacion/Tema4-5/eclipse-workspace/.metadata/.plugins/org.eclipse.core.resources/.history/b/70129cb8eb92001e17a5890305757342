import java.util.ArrayList;

public class RegistroDeEstudiantes {
	
	ArrayList <Estudiante> arrayEstud = new ArrayList<>();
	ArrayList <Double> notas = new ArrayList<>();
	
	public void agregarEstudiant(Estudiante estudiant) {
		arrayEstud.add(estudiant);
	 }
	 public void ingresarNotas(Estudiante estudiant, double nota) {
		 for (int i = 0; i < arrayEstud.size(); i++) {
	            Estudiante variableEst = arrayEstud.get(i);
	            if (variableEst.equals(estudiant)) {
	            	estudiant.setNota(nota);
	                break;
	            }
		 }
	 }
	 
	 public double calcularPromedioNotas() {
		 return this.notasAlum/this.cantidadNotas;
	 }
	 
	 public void mostrarListaDeEstudiants() {
		 for (int i=0;i<arrayEstud.size();i++) {
			 System.out.println(arrayEstud.get(i));
			 }
	 }
}
